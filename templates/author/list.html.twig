
    <h1>List of Authors</h1>
    
    <table class="table" border=1>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.username }}</td>
                    <td>{{ author.email }}</td>
                    <td>
                        <a href="{{ path('edit', {'id': author.id}) }}" class="btn btn-primary">edit</a>
                        <a href="{{ path('remove', {'id': author.id}) }}" class="btn btn-primary">delete</a>

                </tr>
            {% endfor %}
        </tbody>
    </table>

